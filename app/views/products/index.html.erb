<div style="width: 100%;">
  <% if notice.present? %>
    <p class="py-3 px-3 mb-5" id="notice">
      <% notice %>
    </p>
  <% end %>
  <div class="d-flex justify-content-between align-items-center pb-2">
    <h1 class="mx-auto text-lg">Products</h1>
  </div>
  <table class="mx-auto mb-4" id="products">
    <thead>
      <tr>
        <td colspan="3">
          <div class="mt-4">
          <%= link_to "New product", new_product_path, class: "rounded inline py-1 px-2 btn btn-success my-2" %>
          </div>
        </td>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr style="<%= cycle("background-color: #F0FDF4;", "background-color: #FFFFFF") %>">
          <td class="px-2 py-3">
            <%= image_tag(product.image_url, style: "width: 150px; height: 200px;") %>
          </td>
          <td>
            <h2 class="fs-5"><%= product.title %></h2>
            <p><%= truncate(strip_tags(product.description), length: 80) %></p>
          </td>
          <td class="px-3">
            <ul style="list-style-type: none;">
              <li>
                <%= link_to "Show", product_url(product), class: "link-success" %>
              </li>
              <li>
                <%= link_to "Edit", edit_product_url(product), class: "link-success" %>
              </li>
              <li>
                <%= link_to "Destroy", product_url(product), class: "link-success", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
              </li>
            </ul>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
